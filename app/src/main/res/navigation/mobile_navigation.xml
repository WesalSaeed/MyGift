<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

                <!--
                R.id.navigation_shops,
                R.id.navigation_categories,
                R.id.navigation_myAccount,
                R.id.navigation_sellerAccount,
                R.id.navigation_contact,
                R.id.navigation_language
                -->

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.wesal.mygift.Fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_shops"
        android:name="com.wesal.mygift.Fragments.ShopsFragment"
        android:label="Shops"
        tools:layout="@layout/fragment_shops" />
    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.wesal.mygift.Fragments.CategoriesFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_categories" />
    <fragment
        android:id="@+id/navigation_myAccount"
        android:name="com.wesal.mygift.Fragments.CustomerProfileFragment"
        android:label="My Account"
        tools:layout="@layout/fragment_customer_profile" />
    <fragment
        android:id="@+id/navigation_sellerAccount"
        android:name="com.wesal.mygift.Fragments.SellerLoginFragment"
        android:label="Join App As Seller"
        tools:layout="@layout/fragment_seller_login" />
    <fragment
        android:id="@+id/navigation_contact"
        android:name="com.wesal.mygift.Fragments.ContactUsFragment"
        android:label="Contact us"
        tools:layout="@layout/fragment_contact_us" />
    <fragment
        android:id="@+id/navigation_language"
        android:name="com.wesal.mygift.Fragments.CartFragment"
        android:label="Language"
        tools:layout="@layout/fragment_language" />

</navigation>